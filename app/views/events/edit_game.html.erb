<div class = "arrow-left">
  <%= link_to "", new_sport_bet_room_events_path(@event.bet_room), class:"fas fa-arrow-left" %>
</div>


<h2>Selectionnez un match</h2>

<%= simple_form_for(@event, url: update_game_event_path(@event), method: :post) do |f| %>
  <%= f.input :game, collection: ["PSG-OM", "OL-Monaco", "Saint-Etienne-Bordeaux"] %>
  <%= f.hidden_field :id %>
  <%= f.button :submit, "Next"  %>
<% end %>
