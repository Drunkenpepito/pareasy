<div class="container-fluid text-center">
  <div class="row">
    <div class="col-sm-12">
      <div class="form">
        <h2>Modifiez votre Bet Room</h2>
        <div class="form-inputs">
          <%= simple_form_for(@bet_room) do |f| %>
            <%= f.input :name, placeholder: 'My Bet Room', label: "Nom du groupe" %>
            <%= f.input :photo, as: :file %>
            <%= f.button :submit, "Edit!", class: "btn-back btn-flat"%>
          <% end %>
        </div>
        <div>
          <%= link_to "Annuler", bet_room_path, class: "btn-back btn-flat" %>
        </div>
      </div>
    </div>
  </div>
</div>
