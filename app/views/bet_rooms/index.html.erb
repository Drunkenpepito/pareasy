

<div class="container text-center">
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Ballade toi en une salle de jeu 🙄 ...
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <% @bet_rooms.each do |room| %>
        <a class="dropdown-item" href="#"><%=room.name%> ⚽️ <%=room.users.count%> gamers 🏆 </a>
      <% end %>
    </div>
  </div>
</div>
</br>
</br>


<div class="container">
    <div class="cards">
      <% @bet_rooms.each do |room| %>
        <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= asset_url "rooney.jpg" %>') ;">
          <div class="card-category">
            <div class=" text-white mb-3" style="max-width: 18rem";>
              <div class="card-header"><%=room.name%></div>
              <div class="card-body">
                <%= cl_image_tag("erhb38sl8zo9dv0hb87giocwr7i0",width: 400, height: 300, crop: :fill) %>
                <%= link_to 'BET now!', bet_room_path(room), class: "btn pierre" %>
                <p class="card-text"><%=room.users.count%> gamers</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>


