
<% @events.each do |event| %>
  <% if  event.bets != []%>
    <div id="accordion">
      <div class="card-event">
        <div class="card-event-line1 text-center">
            <button class="btn btn-success btn-pouet btn-lg card-event-line1" data-toggle="collapse" data-target="#collapseOne-<%= event.id %>" aria-expanded="true" aria-controls="collapseOne">
            <%= cl_image_tag event.bets.first.user.photo.key, class: "md avatar-pouet d-flex justify-content-between  "%>
              <span ><strong><%= event.game %></strong></span>
              <div><%= event.description %></div>
                <% if event.winners.include?(current_user) %> <span class="d-flex justify-content-end">🏆</span>
                <% else event.winners.include?(current_user) %> <span class="d-flex justify-content-end"> 👎</span>
                <% end %>
              </span >
                <% if event.results == true %>
                  <span class="d-flex justify-content-end">✅</span>
                <% else %>
                  <span class="d-flex justify-content-end">❌</span>
                <% end %>
            </button>
        </div>
      </div>








      <div id="collapseOne-<%= event.id %>" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
        <div class="card-body border border-success">
          <div class="cardsEvent">
            <div class="card-event">
              <div class="card-event-line2"><h2><strong> Résultat ! </strong></h2></div>
              <div class="card-event-line2"><%=event.game %></div>
              <div class="card-event-line3"><%=event.description %></div>
            </div>
          </div>
          <div class="cardsEvent">
            <div class="card-event-result">
                    <div ><h4 ><strong> Liste des gagnants</strong></h4></div>


            </div>
        </div>


          <div class="table-container" role="table" aria-label="Destinations">

            <% event.users.each do |poto| %>
              <div class="flex-table row" role="rowgroup">
                <div class="flex-row "  role="cell"><span>  <%= poto.username %> </span></div>
                <div class="flex-row" role="cell">
                  <% if event.winners.include?(poto)%>
                    🏅
                  <% else %>
                    💩
                  <% end %>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>  <!-- end de la bouce event -->

























