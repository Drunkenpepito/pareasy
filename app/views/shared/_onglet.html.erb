    <li><%= link_to "", edit_bet_room_path(@bet_room), class: "fas fa-cog" %></li>
    <li>
      <button class="btn btn-guost" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
