              <%= f.input :amount_cents, input_html: {value: 10}, as: :hidden %>
              <%= f.button :submit, "+ 10 €" , class: "btn btn-primary"%>
            <% end %>
          </div>
        </div>
      </div>

      </div>
    </div>

