<div class = "onglet">
  <ul>
   <li><%= link_to "", bet_room_path(@bet_room), class: "far fa-futbol" %></li>
    <li><%= link_to "", bet_room_stat_path(@bet_room), class: "fas fa-chart-pie" %></li>
    <li><%= link_to "",chatroom_path(@bet_room.chatroom) , class: "far fa-comments", data: { turbolinks: false } %></li>
